# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/synapse_dt
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=synapse_dt
DATABASE_USER=username
DATABASE_PASSWORD=password

# Application Configuration
APP_NAME="SynapseDT - End-to-End Data Testing System"
APP_VERSION=1.0.0
DEBUG=True
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
ALLOWED_ORIGINS=["http://localhost:3000", "http://localhost:8000"]
ALLOWED_METHODS=["GET", "POST", "PUT", "DELETE", "OPTIONS"]
ALLOWED_HEADERS=["*"]

# File Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=20971520  # 20MB in bytes
ALLOWED_FILE_TYPES=["pdf", "png", "jpg", "jpeg", "csv", "xlsx", "xls"]

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=your-email@gmail.com
SMTP_FROM_NAME="SynapseDT System"

# Redis Configuration (for Celery)
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# LLM Configuration - REQUIRED FOR LLM FUNCTIONALITY
# Both API keys are OPTIONAL but at least one is REQUIRED for LLM features to work
# Without API keys, all LLM tests will fail (no mock fallbacks)

# Claude API - Recommended for comprehensive analysis
ANTHROPIC_API_KEY=your-anthropic-api-key-here
CLAUDE_MODEL=claude-3-5-sonnet-20241022
CLAUDE_MAX_TOKENS=4000
CLAUDE_COMPREHENSIVE_TEMPERATURE=0.1
CLAUDE_COMPREHENSIVE_MAX_TOKENS=8192

# Gemini API - Recommended for fast extraction
GOOGLE_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-2.0-flash
GEMINI_MAX_TOKENS=4000

# Hybrid Analysis Configuration (requires both APIs for full functionality)
ENABLE_HYBRID_ANALYSIS=true
EXTRACTION_MODEL=gemini-2.0-flash
ANALYSIS_MODEL=claude-3-5-sonnet
MIN_CONFIDENCE_FOR_GEMINI=7.0
CRITICAL_ATTRIBUTES_USE_CLAUDE=true

# Batch Configuration for Token Limit Optimization
GEMINI_BATCH_SIZE=50
CLAUDE_BATCH_SIZE=15
CLAUDE_SMART_BATCH_SIZE=8

# LLM Performance Settings
LLM_TEMPERATURE=0.0
LLM_MAX_TOKENS=32000
LLM_MAX_RETRIES=3
LLM_RETRY_DELAY=1.0

# Default LLM Provider (claude or gemini)
DEFAULT_LLM_PROVIDER=claude

# Advanced LLM Configuration - Enhanced from reference implementation
# Temperature and token settings
LLM_MAX_TOKENS=32000

# Claude-specific Optimization Settings
CLAUDE_ANTI_TRUNCATION_MODE=True
CLAUDE_PRIORITY_BATCHING=True

# Document Processing Optimization
MAX_CHUNK_SIZE=3000
CHUNK_OVERLAP=300
MAX_CHUNKS_PER_BATCH=20
API_DELAY=0.1
MAX_CONCURRENT_CALLS=5

# LLM Audit and Monitoring
LLM_AUDIT_ENABLED=True
LLM_PERFORMANCE_TRACKING=True
LLM_COST_TRACKING=True

# SLA Configuration (in hours)
DEFAULT_SLA_HOURS=24
CDO_ASSIGNMENT_SLA=24
REPORT_OWNER_APPROVAL_SLA=24
DATA_PROVIDER_SUBMISSION_SLA=24

# Audit Configuration
AUDIT_LOG_RETENTION_DAYS=2555  # 7 years
LLM_AUDIT_RETENTION_DAYS=1095  # 3 years

# Security Configuration
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_UPPERCASE=True
PASSWORD_REQUIRE_LOWERCASE=True
PASSWORD_REQUIRE_NUMBERS=True
PASSWORD_REQUIRE_SPECIAL=True

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Performance Configuration
MAX_CONCURRENT_USERS=100
API_RATE_LIMIT=1000  # requests per minute
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=30

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30 