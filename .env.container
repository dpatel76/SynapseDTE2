# Environment configuration for containerized deployment
# Copy this file to .env and adjust values as needed

# Application settings
APP_VERSION=3.7.0
SECRET_KEY=change-this-in-production-to-a-secure-random-string
API_V1_STR=/api/v1

# Database configuration
DATABASE_NAME=synapse_dt
DATABASE_USER=synapse_user
DATABASE_PASSWORD=synapse_password
DATABASE_HOST=postgres
DATABASE_PORT=5433  # External port (incremented by 1)

# Redis configuration
REDIS_PASSWORD=synapse_redis_password
REDIS_PORT=6380  # External port (incremented by 1)

# Backend configuration
BACKEND_PORT=8001  # External port (incremented by 1)
BACKEND_WORKERS=4

# Frontend configuration
FRONTEND_PORT=3001  # External port (incremented by 1)
REACT_APP_API_URL=http://localhost:8001/api
REACT_APP_TEMPORAL_UI_URL=http://localhost:8089

# Temporal configuration
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=synapse-workflow-queue
TEMPORAL_POSTGRES_PASSWORD=temporal_password
TEMPORAL_PORT=7234  # External port (incremented by 1)
TEMPORAL_UI_PORT=8089  # External port (incremented by 1)
TEMPORAL_METRICS_PORT=9091  # External port (incremented by 1)
TEMPORAL_POSTGRES_PORT=5435  # External port for Temporal PostgreSQL

# Worker configuration
WORKER_REPLICAS=2
TEMPORAL_MAX_CONCURRENT_ACTIVITIES=10
TEMPORAL_MAX_CONCURRENT_WORKFLOWS=10
TEMPORAL_WORKER_LOG_LEVEL=INFO

# Nginx configuration (optional)
NGINX_HTTP_PORT=81  # External port (incremented by 1)
NGINX_HTTPS_PORT=444  # External port (incremented by 1)

# LLM Configuration
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GOOGLE_API_KEY=your_google_api_key_here
DEFAULT_LLM_PROVIDER=claude

# Email configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@synapse-dt.local
SMTP_USE_TLS=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Development settings
DEBUG=false
RELOAD=false

# Container environment flag
DOCKER_CONTAINER=1